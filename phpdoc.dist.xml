<phpdocumentor
    configVersion="3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://www.phpdoc.org"
    xsi:schemaLocation="https://www.phpdoc.org https://docs.phpdoc.org/latest/phpdoc.xsd"
>
    <title>Documentation GSB</title>
    
    <!-- Fichiers à documenter -->
    <paths>
        <output>docs</output>
        <cache>build/cache</cache>
    </paths>
    
    <!-- Dossiers source -->
    <source>
        <path>./src</path>
        <path>./app</path> <!-- si tu as un dossier app -->
    </source>
    
    <!-- Template à utiliser -->
    <template name="default" />
    
    <!-- Versions (optionnel) -->
    <versions>
        <version number="1.0">
            <api>
                <source dsn=".">
                    <path>src</path>
                </source>
            </api>
        </version>
    </versions>
</phpdocumentor>